# Configuración de entorno para Luz - App de Bienestar

# Base de datos (SQLite por defecto, PostgreSQL opcional)
DATABASE_URL=sqlite:///./data/luz_bienestar.db
# DATABASE_URL=postgresql://luz_user:luz_password@postgres:5432/luz_bienestar

# Puerto del backend
PORT=8000

# Configuración de logging
LOG_LEVEL=info

# IA/ML
USE_REAL_ML=true
ML_MOCK_MODE=false

# Configuración de limpieza automática
AUTO_CLEANUP_ENABLED=true
CLEANUP_SCHEDULE="0 3 1 * *"  # Día 1 de cada mes a las 3:00 AM

# CORS (para desarrollo)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "*"]

# Configuración de debug
DEBUG=false

# Para usar este archivo:
# 1. Copia como .env: cp .env.example .env
# 2. Modifica los valores según tu entorno